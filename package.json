{
  "name": "@joehua/slate-edit-table",
  "description": "A Slate plugin to handle keyboard events in tables.",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "repository": "git://github.com/GitbookIO/slate-edit-table.git",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "WEBPACK_CONFIG=$(pwd)/webpack.config.js BABEL_DISABLE_CACHE=1 BABEL_ENV=production NODE_ENV=production babel --out-dir='lib' --ignore='stories/*,__test__/*' src",
    "build:css": "cpx 'lib-css/*.css' lib && rimraf lib-css",
    "prepublish": "npm run build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src ./example",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:staged": "lint-staged",
    "flow": "npm run lint && flow",
    "example": "NODE_ENV=development node example/server.js",
    "storybook": "NODE_ENV=development start-storybook -p 9001",
    "build-storybook": "NODE_ENV=storybook build-storybook -c .storybook -o build",
    "gh-pages": "npm run build-storybook && node gh-pages.js",
    "test:file": "NODE_ENV=test NODE_PATH=./src mocha --require babel-register --require testHelper.js",
    "test": "nyc -r text -r lcov npm run test:js",
    "test:js": "NODE_ENV=test NODE_PATH=./src mocha --require babel-register --require testHelper.js 'src/**/__test__/*.test.js'",
    "test:watch": "NODE_ENV=test NODE_PATH=./src mocha --watch --require babel-register --require testHelper.js 'src/**/__test__/*.test.js'"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.6.1",
    "autoprefixer": "^6.4.0",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-flow-comments": "^6.3.19",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-rewire": "^1.0.0-rc-7",
    "babel-plugin-transform-flow-comments": "^6.8.0",
    "babel-plugin-webpack-loaders": "^0.7.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "chai-things": "^0.2.0",
    "cross-env": "^2.0.1",
    "css-loader": "^0.24.0",
    "css-modules-require-hook": "^4.0.1",
    "dirty-chai": "^1.2.2",
    "enzyme": "^2.3.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-webpack": "^0.5.1",
    "eslint-plugin-flowtype": "^2.11.4",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "flow-bin": "^0.31.1",
    "gh-pages": "^0.11.0",
    "jsdom": "^9.2.1",
    "json-loader": "^0.5.4",
    "lint-staged": "^2.0.3",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.11.1",
    "postcss-reporter": "^1.4.1",
    "pre-commit": "^1.1.3",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "webpack": "^2.1.0-beta.21"
  },
  "peerDependencies": {
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "immutable": "^3.8.1",
    "slate": "^0.13.6"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "block-no-empty": null,
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "indentation": 2
    }
  },
  "lint-staged": {
    "*.js": "lint:js",
    "*.css": "stylelint"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "pre-commit": "lint:staged",
  "keywords": [
    "slate"
  ]
}
